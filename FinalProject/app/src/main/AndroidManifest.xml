<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.finalproject">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:remove="android:maxSdkVersion" />

    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LandingActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|locale|layoutDirection"
            android:screenOrientation="portrait"/>

        <activity android:name=".FilterActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|locale|layoutDirection"
            android:screenOrientation="portrait"/>

        <activity android:name=".TodosActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|locale|layoutDirection"
            android:screenOrientation="portrait"/>

        <activity android:name=".MedicineActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|locale|layoutDirection"
            android:screenOrientation="portrait"/>

        <activity android:name=".CreateMedActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|locale|layoutDirection"
            android:screenOrientation="portrait"/>

        <activity android:name=".MoodActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|locale|layoutDirection"
            android:screenOrientation="portrait"/>

        <activity android:name=".ShowMedLogsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|locale|layoutDirection"
            android:screenOrientation="portrait"/>

        <receiver android:process=":remote" android:name=".Alarmreceiver" android:exported="true"/>

        <service android:name=".AlarmService"
            android:enabled="true"
            android:process=":alarm_service"/>

    </application>


</manifest>